@page
@model Aeon_Web.Areas.Project.Pages.Job.SwipeModel
@{
    ViewData["Title"] = "Job Swipe";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
<link rel="stylesheet" href="~/css/areas/project/swipe.css"/>
<link rel="stylesheet" href="~/css/areas/project/star.css"/>
<script src="~/js/areas/project/swipe.js"></script>
<script src="~/js/render-stars.js"></script>

<div class="body">
    <div class="card-container" id="cardContainer">
        @foreach (var vacancy in Model.Vacancies)
        {
            <div class="job-card" data-vacancy-id="@vacancy.Id">
                <div style="max-height: 85%">
                    <h2>@vacancy.Title</h2>
                    <div class="star-display" data-rating="@vacancy.DifficultyLevel">
                        @for (var i = 1; i <= 5; i++)
                        {
                            <span class="star" data-star="@i"></span>
                        }
                    </div>
                    <p class="job-desc">@vacancy.Description</p>
                    <div class="skills">
                        @foreach (var skill in vacancy.VacancySkills)
                        {
                            <div class="skill">@skill.Skill?.Name</div>
                        }
                    </div>
                </div>
                <div class="actions">
                    <button class="dislike" onclick="swipeVacancy(this, 'left')" title="Dislike"><i class="fas fa-times"></i>
                    </button>
                    <button class="like" onclick="swipeVacancy(this, 'right')" title="Like"><i class="fas fa-heart"></i>
                    </button>
                </div>
            </div>
        }
        <div id="noVacanciesMessage" class="no-vacancies" style="display: none;">
            <h2>Вакансии закончились</h2>
            <p>Вы просмотрели все доступные вакансии.</p>
            <button onclick="location.reload()" class="refresh-button">
                <i class="fas fa-rotate-right"></i> Обновить список
            </button>
        </div>
    </div>
</div>

