@page
@model Aeon_Web.Areas.Project.Pages.Job.DetailsModel

@{
    ViewData["Title"] = "Детальная информация о проекте";
    var vacancy = Model.Vacancy;
}

<link href="https://cdn.jsdelivr.net/npm/lucide@latest" rel="stylesheet"/>
<link rel="stylesheet" href="~/css/areas/project/details.css"/>
<link rel="stylesheet" href="~/css/areas/project/star.css"/>
<script src="~/js/render-stars.js"></script>

<div class="body">
    @if (TempData["Message"] != null)
    {
        <div class="alert-success">@TempData["Message"]</div>
    }

    <section class="job-detail-container animate-fade">
        <div class="job-header">
            <h1 class="job-title">@vacancy.Title</h1>
        </div>

        <div class="job-meta">
            <div class="star-display" data-rating="@vacancy.DifficultyLevel">
                @for (var i = 1; i <= 5; i++)
                {
                    <span class="star" data-star="@i"></span>
                }
            </div>
            <span class="badge"><i data-lucide="calendar-days"></i> @vacancy.PostedDate.ToString("dd MMM yyyy")</span>
        </div>

        <div class="section">
            <h2><i data-lucide="file-text"></i>Описание</h2>
            <p>@vacancy.Description</p>
        </div>

        <div class="section">
            <h2><i data-lucide="list-checks"></i> Required Skills</h2>
            <ul class="skills">
                @foreach (var skill in vacancy.VacancySkills)
                {
                    <li>@skill.Skill?.Name</li>
                }
            </ul>
        </div>

        @if (Model.IsMatch)
        {
            <div class="section">
                <h2><i data-lucide="mail"></i> Contact</h2>
                <p>Email: <a href="mailto:@vacancy.Contact.Email">@vacancy.Contact.Email</a></p>
                @if (!string.IsNullOrWhiteSpace(vacancy.Contact.Phone))
                {
                    <p>Phone: <a href="tel:@vacancy.Contact.Phone">@vacancy.Contact.Phone</a></p>
                }
            </div>
        }

        <div class="actions">
            <form class="actions-buttons" method="post" asp-page-handler="Like">
                @if (!Model.IsLiked)
                {
                    <input type="hidden" asp-for="@Model.Vacancy.Id"/>
                    <button type="submit" class="btn-primary">Откликнуться</button>
                }
                <button class="btn-secondary" onclick="history.back()">Назад</button>
            </form>

            <form class="actions-buttons" method="post" asp-page-handler="Report">
                <input type="hidden" asp-for="@Model.Vacancy.Id"/>
                <button type="submit" class="btn-report">Пожаловаться</button>
            </form>
        </div>
    </section>
</div>

<script>
    lucide.createIcons();
</script>
