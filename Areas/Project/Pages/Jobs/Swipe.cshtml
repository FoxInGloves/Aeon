@page
@model Aeon_Web.Areas.Project.Pages.Jobs.SwipeModel
@{
    ViewData["Title"] = "Job Swipe";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
<link rel="stylesheet" href="~/css/areas/project/swipe.css"/>

<div class="body">
    <div class="card-container" id="cardContainer">
        @foreach (var job in Model.Vacancies)
        {
            <div class="job-card">
                <div style="max-height: 85%">
                    <h2>@job.Title</h2>
                    <p><strong>@job.CompanyName</strong> â€” @job.Location</p>
                    <p class="job-desc">@job.Description</p>
                    <div class="skills">
                        @foreach (var skill in job.SkillsRequired)
                        {
                            <div class="skill">@skill</div>
                        }
                    </div>
                </div>
                <div class="actions">
                    <button class="dislike" onclick="swipe(this, 'left')" title="Dislike"><i class="fas fa-times"></i>
                    </button>
                    <button class="like" onclick="swipe(this, 'right')" title="Like"><i class="fas fa-heart"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function swipe(button, direction) {
        const card = button.closest('.job-card');
        if (!card) return;

        const className = direction === 'left' ? 'swipe-left' : 'swipe-right';
        card.classList.add(className);

        card.addEventListener('transitionend', () => {
            card.remove();
        }, {once: true});
    }
</script>
