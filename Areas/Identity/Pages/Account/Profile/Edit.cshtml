@page
@model Aeon_Web.Areas.Identity.Pages.Account.Profile.Edit

@{
    ViewData["Title"] = "Edit Resume";
}

<h1>Edit Resume</h1>

<form method="post">
    <div>
        <label asp-for="Resume.FullName"></label>
        <input asp-for="Resume.FullName" class="form-control" />
    </div>

    <div>
        <label asp-for="Resume.Title"></label>
        <input asp-for="Resume.Title" class="form-control" />
    </div>

    <div>
        <label asp-for="Resume.Summary"></label>
        <textarea asp-for="Resume.Summary" class="form-control"></textarea>
    </div>

    <h3>Contact Info</h3>
    <div>
        <label asp-for="Resume.Contact.Email"></label>
        <input asp-for="Resume.Contact.Email" class="form-control" />
    </div>
    <div>
        <label asp-for="Resume.Contact.Phone"></label>
        <input asp-for="Resume.Contact.Phone" class="form-control" />
    </div>
    <div>
        <label asp-for="Resume.Contact.Website"></label>
        <input asp-for="Resume.Contact.Website" class="form-control" />
    </div>

    <h3>Skills</h3>
    <div>
        @*@for (int i = 0; i < Model.Resume.Skills.Count; i++)
        {
            <input asp-for="Resume.Skills[i]" class="form-control mb-1" />
        }*@
        <input asp-for="Skills" class="form-control mb-1" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
