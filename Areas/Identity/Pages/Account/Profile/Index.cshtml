@page
@model Aeon_Web.Areas.Identity.Pages.Account.Profile.IndexModel

@{
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="~/css/areas/identity/account/profile/profile-actions.css"/>
<link rel="stylesheet" href="~/css/common.css"/>
<link rel="stylesheet" href="~/css/text.css"/>
<link rel="stylesheet" href="~/css/margin.css"/>
<link rel="stylesheet" href="~/css/sizing.css"/>
<div>
    <partial name="_NavPages"/>
    <table class="mt-1 center-block">
        @if (Model.Resume is not null)
        {
            <td class="w-50">
                <div class="desc me-5 mb-4">
                    <div class="fw-bold">Hello!</div>
                    <p>@Model.Resume.Title</p>
                    <p>@Model.Resume.Summary</p>
                </div>
                <table class="center-block mt-5">
                    <td class="w-50">
                        <div class="circle-base like-circle me-2">
                            <a class="circle-text like-circle-text m-auto">
                                ИЗБРАННОЕ
                            </a>
                        </div>
                    </td>
                    <td class="w-50">
                        <div class="circle-base proj-circle ms-3">
                            <a class="circle-text proj-circle-text m-auto">
                                PROJECTS
                            </a>
                        </div>
                    </td>
                </table>
            </td>
            <td class="w-50">
                <div class="details-container center-block ms-5">
                    <div class="m-tl-50-20">
                        <p class="light-text fw-bold">Details</p>
                        <div class="mt-2">
                            <div class="light-text fw-bold">Роль</div>
                            <div class="light-text">@Model.Resume.Title</div>
                        </div>
                        <div class="mt-2">
                            <div class="light-text fw-bold">Имя</div>
                            <div class="light-text">@Model.Resume.FullName</div>
                        </div>
                        <p class="light-text fw-bold mt-3">Contacts</p>
                        <div class="mt-3">
                            <div class="light-text fw-bold">Email</div>
                            <div class="light-text">@Model.Resume.Contact.Email</div>
                        </div>
                        <div class="mt-2">
                            <div class="light-text fw-bold">Phone</div>
                            <div class="light-text">@Model.Resume.Contact.Phone</div>
                        </div>
                        <div class="mt-2">
                            <div class="light-text fw-bold">Website</div>
                            <div class="light-text">@Model.Resume.Contact.Website</div>
                        </div>
                        <p class="mt-3">Skills</p>
                    </div>
                </div>
            </td>
        }
        else
        {
            <div>
                <a>
                    Создать резюме
                </a>
            </div>
        }
    </table>
    <table class="mt-1 center-block">
        <tr>
            <td>
                <table class="center-block">
                    <td class="w-50">
                        <div class="circle-base like-circle">
                            <a class="circle-text like-circle-text m-auto">
                                ИЗБРАННОЕ
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="circle-base proj-circle">
                            <a class="circle-text proj-circle-text m-auto">
                                PROJECTS
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="circle-base">
                            <a></a>
                        </div>
                    </td>
                </table>
            </td>
            <td class="w-50">

            </td>
        </tr>
    </table>
</div>