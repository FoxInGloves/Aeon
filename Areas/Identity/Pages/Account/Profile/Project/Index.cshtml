@page
@model Aeon_Web.Areas.Identity.Pages.Account.Profile.Project.IndexModel
@{
    ViewData["Title"] = "Мой проект";
    var project = Model.OwnedVacancy;
}

<div class="container py-5">
    <div class="bg-white shadow rounded p-5">
        <h1 class="display-5 fw-bold mb-4 text-center">Мой проект</h1>

        @if (project == null)
        {
            <div class="text-center">
                <p class="lead">У вас пока нет созданного проекта.</p>
                <a class="btn btn-primary btn-lg mt-3" asp-page="/Vacancy/Create">Создать проект</a>
            </div>
        }
        else
        {
            <div class="row g-4 align-items-center">
                <div class="col-md-8">
                    <h2 class="h3">@project.Title</h2>
                    <p class="text-muted">@project.Description</p>

                    <div class="mt-4">
                        <h5 class="mb-2">Навыки, необходимые для проекта:</h5>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var skill in project.VacancySkills)
                            {
                                <span class="badge bg-info text-dark p-2">@skill.Skill.Name</span>
                            }
                        </div>
                    </div>

                    <div class="mt-4">
                        <a class="btn btn-outline-secondary me-2" asp-page="/Vacancy/Edit" asp-route-id="@project.Id">
                            <i class="bi bi-pencil-square"></i> Редактировать
                        </a>
                        <a class="btn btn-outline-danger" asp-page="/Vacancy/Delete" asp-route-id="@project.Id">
                            <i class="bi bi-trash"></i> Удалить
                        </a>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Участники проекта</h5>
                            <ul class="list-group list-group-flush">
                                @if (project.UserVacancies.Any())
                                {
                                    @foreach (var uv in project.UserVacancies)
                                    {
                                        <li class="list-group-item">
                                            @uv.User.UserName
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item text-muted">Нет участников</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
